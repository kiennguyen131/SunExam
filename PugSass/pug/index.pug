  body 
    include ./block/header.pug
    main 
      section
        #carouselExampleCaptions.carousel.slide(data-bs-ride='carousel')
          .carousel-indicators
            button.active(type='button custom-carousel-btn' data-bs-target='#carouselExampleCaptions' data-bs-slide-to='0' aria-current='true' aria-label='Slide 1')
            button(type='button custom-carousel-btn' data-bs-target='#carouselExampleCaptions' data-bs-slide-to='1' aria-label='Slide 2')
            button(type='button custom-carousel-btn' data-bs-target='#carouselExampleCaptions' data-bs-slide-to='2' aria-label='Slide 3')
          .carousel-inner
            .carousel-item.active
              img.d-block.w-100(src='./../img/slide1.jpeg' alt='...')
            .carousel-item
              img.d-block.w-100(src='./../img/slide2.jpeg' alt='...')
            .carousel-item
              img.d-block.w-100(src='./../img/slide3.jpeg' alt='...')
      
      section.mb-5
        mixin product(imgSrc, category, name, oldPrice, newPrice)
          .product.d-flex.flex-column.align-items-center
            img.w-100(src=imgSrc alt='img')
            span.text-muted.text-uppercase
              small= category
            a.text-decoration-none.product__title(href='#')= name
            .product__price
              del(style='margin-right: 10px;')= oldPrice  
              strong= newPrice
        -var products=[{imgSrc:'./../img/1.jpg',category:'Đồng hồ nam',name:'Đồng hồ Thuỵ Điển nam',oldPrice:'12 000 000 VND',newPrice:'10 000 000 VND'},{imgSrc:'./../img/nam2.jpeg',category:'Đồng hồ nam',name:'Đồng hồ Thuỵ Điển nam',oldPrice:'12 000 000 VND',newPrice:'10 000 000 VND'},{imgSrc:'./../img/nam3.jpg',category:'Đồng hồ nam',name:'Đồng hồ Thuỵ Điển nam',oldPrice:'',newPrice:'10 000 000 VND'},{imgSrc:'./../img/nam4.jpeg',category:'Đồng hồ nam',name:'Đồng hồ Thuỵ Điển nam',oldPrice:'',newPrice:'10 000 000 VND'},{imgSrc:'./../img/1.jpg',category:'Đồng hồ nam',name:'Đồng hồ Thuỵ Điển nam',oldPrice:'12 000 000 VND',newPrice:'10 000 000 VND'},{imgSrc:'./../img/nam2.jpeg',category:'Đồng hồ nam',name:'Đồng hồ Thuỵ Điển nam',oldPrice:'12 000 000 VND',newPrice:'10 000 000 VND'},{imgSrc:'./../img/nam3.jpg',category:'Đồng hồ nam',name:'Đồng hồ Thuỵ Điển nam',oldPrice:'',newPrice:'10 000 000 VND'},{imgSrc:'./../img/nam4.jpeg',category:'Đồng hồ nam',name:'Đồng hồ Thuỵ Điển nam',oldPrice:'',newPrice:'10 000 000 VND'}]
        h2.text-center.mt-4.mb-4 ĐỒNG HỒ NAM
        .container
          .row
            each product in products
              .col-lg-3.col-sm-6
                +product(product.imgSrc, product.category, product.name, product.oldPrice, product.newPrice)

      section.mb-5
        .service
          .container.p-5
            .row
              .col-lg-4.col-sm-12.mt-3.d-flex.align-items-center.justify-content-center
                i.fas.fa-truck.me-3(style='font-size:80px;')
                span(style='font-size:20px;') Mi&#x1EC5;n ph&iacute; giao h&agrave;ng
              .col-lg-4.col-sm-12.mt-3.d-flex.align-items-center.justify-content-center
                i.me-3.fas.fa-gifts.me-3(style='font-size:80px;')
                span(style='font-size:20px;') Qu&agrave; t&#x1EB7;ng &dstrok;&#x1EB7;c bi&#x1EC7;t
              .col-lg-4.col-sm-12.mt-3.d-flex.align-items-center.justify-content-center
                i.me-3.fas.fa-piggy-bank.me-1(style='font-size:80px;')
                span(style='font-size:20px;') Ti&#x1EBF;t ki&#x1EC7;m khi mua &#x1EDF; Mona

      section.mb-5 
        .news 
          .container 
            h2.text-center.mt-4.mb-4 TIN TỨC
            .row 
              - for (var i=0; i<6; i++)
                .col-4.mb-3 
                  .new.w-100 
                    img.w-50( src="./../img/doi1.jpeg", alt="img") 
                    .w-50.new__content
                      h3.new__title Đồng hồ Mona đạt chuẩn quốc tế
                      .new__summary Lorem ipsum dolor sit amet consectetur, adipisicing elit. Nesciunt aut quisquam unde. Dignissimos, minus. Sequi vitae voluptates veritatis sunt reprehenderit amet repellat officia, blanditiis iure nam mollitia.
                      button.mt-2.new__button Xem tiếp
        
      section.mb-5
        .container-fluid.d-flex
          img.w-50(src="./../img/banner1.png" alt="banner")
          img.w-50(src="./../img/banner2.png" alt="banner")




            


    include ./block/footer.pug